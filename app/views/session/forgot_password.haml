#sign-in.row
  .span7.offset2
    = simple_form_for reset_password_path, url: '/reset_password',
      html: { class: 'form-horizontal'} do |f|
      %fieldset
        = f.input :email, label: t(:email), as: 'email'
      .form-actions
        = f.submit t(:reset_password), class: 'btn btn-danger'
.row
  %p &nbsp;