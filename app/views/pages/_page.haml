%li{ id: "page-#{page.to_param}", class: 'list-entry bottom-bordered' }
  .btn-group.pull-right
    = render 'editor_buttons', page: page
    = render 'terminator_buttons', page: page
    = render 'controller_buttons', page: page
  - if current_page?(page_path(page))
    = page.title
  - else
    = link_to page.title, page_path(page)
