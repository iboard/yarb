%li{ id: "page-#{page.to_param}", class: 'list-entry bottom-bordered' }
  .btn-group.pull-right
    = link_to t(:edit), edit_page_path(page), class: 'btn btn-primary'
    = link_to t(:delete), page_path(page), method: :delete, data: { confirm: t(:are_you_sure) }, class: 'btn btn-danger'
  = link_to page.title, page_path(page)
