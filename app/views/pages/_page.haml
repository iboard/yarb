%li{ id: "page-#{page.to_param}", class: 'list-entry bottom-bordered' }
  .btn-group.pull-right= render "page_edit_buttons", page: page
  = render 'sortable_handles', page: page
  = link_to_unless_current page.title, page_path(page)
  .draft= t(:is_a_draft) if [1, "1", true].include?(page.draft)
  = render "page_information", page: page

